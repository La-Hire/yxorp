{

  "manifest_version": 2,
  "name": "yxorp",
  "description": "A simple open source automatic proxy selector.",
  "version": "0.1.2",

  "icons": {
    "48": "icons/yxorp.svg",
    "96": "icons/yxorp.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "60.0"
    }
  },

  "background": {
    "scripts": [
      "background/proxy-handler.js"
    ]
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "permissions": ["proxy", "storage", "<all_urls>"]

}
